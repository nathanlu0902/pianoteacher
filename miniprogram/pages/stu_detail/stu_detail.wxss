Page {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.search-bar {
  padding: 10rpx 20rpx;
  margin: 20rpx 20rpx;
  border: 1px #bbbbbb solid;
}

.btn-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 40rpx;
}

.stu-item-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 10rpx 20rpx;
  border-bottom: #bbbbbb 1px solid;

}

.stu-item-btn {
  width: 30rpx;
  height: 30rpx;
  align-items: center;
}

