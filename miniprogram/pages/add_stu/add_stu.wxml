<view>
<view class="photo-wrapper">
  <image class="photo" src="" style=""></image>
</view>

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="infoInput">
    <text class="info">姓</text>
    <input type="text" class="weui-input" maxlength="20" placeholder="请输入姓氏" bindinput="getSurname"/>
  </view>

  <view class="infoInput">
    <text class="info">名</text>
    <input type="text" class="weui-input" maxlength="20" placeholder="请输入名字" bindinput="getName" />
  </view>

  <view class="infoInput">
    <text class="info">性别</text>
    <radio-group bindchange="getGender" class="weui-input">
        <label>
          <radio value="M" color="#ff0000" checked="true" />男
        </label>
        <label>
          <radio value="F" color="#ff0000"/>女
        </label>
    </radio-group>
  </view>

  <view class="infoInput">
    <text class="info">手机号</text>
    <input type="number" class="weui-input" maxlength="11" placeholder="请输入手机号" bindinput="getMobile" />
  </view>

  <view class="infoInput">
    <text class="info">家长手机号(选填)</text>
    <input type="number" class="weui-input" maxlength="11" placeholder="请输入家长手机号" bindinput="getParmobile" />
  </view>

  <view class="btn-area">
    <button type="primary" form-type="submit" class="form-btn">添加</button>
    <button type="primary" form-type="reset" class="form-btn">重置</button>
  </view>
</form>

</view>